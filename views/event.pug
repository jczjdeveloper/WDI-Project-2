extends secret-layout

block secret-content
  header.row.header
    h1 Invite guests!
  section#inviteGuestList.row
    .col-md-12
  section.row.create
    .col-md-2.createGuest
      button#createbtn.btn.btn-success(type='button') Create

  #editform.modal.fade(tabindex='-1', role='dialog')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          h4.modal-title Update Guest
        .modal-body
          .form-group
            label(for='name') Name
            input#name.form-control(type='text', placeholder='Name')
          .form-group
            label(for='email') Email
            input#email.form-control(type='text', placeholder='Email')
            input#id.form-control(type='hidden')
        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') Close
          button#addguest.btn.btn-primary.submit(type='button') Add Guest!

  script#guestRowTpl(type='text/template').
    <div class="row guest" data-id="{{Id}}">
    <div class="col-md-6 name">{{Name}}</div>
    <div class="col-md-5 email">{{Email}}</div>
    <div class="col-md-1 delete">
      <button type="button" class="btn btn-danger">Delete</button>
    </div>
    <div class="col-md-1 update">
      <button type="button" class="btn btn-info">Update</button>
    </div>
    </div>


block scripts
  script(src='../js/main.js')
